<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp46_h"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/key"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp12_w"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp4_w"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp8_w"
        android:paddingRight="@dimen/dp12_w"
        android:inputType="text"
        android:background="@drawable/dialog_edit_text_bg2"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>

</LinearLayout>
