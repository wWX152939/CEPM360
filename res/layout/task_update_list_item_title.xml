<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@drawable/task_child_list_title_background"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/change_id"
        android:layout_width="@dimen/dp62_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp10_w"
        android:textColor="#ffffff"
        android:textStyle=""
        android:textSize="@dimen/sp18_s"/>

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="@color/task_child_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            
            <TextView
		        android:id="@+id/change_title"
		        android:layout_width="@dimen/dp124_w"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_marginStart="@dimen/dp10_w"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/sp18_s"/>
		
		    <View
		        android:layout_width="@dimen/dp1_w"
		        android:layout_height="match_parent"
		        android:background="@color/task_child_list_line"
		        android:visibility="visible" />

            <TextView
                android:id="@+id/change_date"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp10_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
		        android:layout_width="@dimen/dp1_w"
		        android:layout_height="match_parent"
		        android:background="@color/task_child_list_line"
		        android:visibility="visible" />

            <TextView
                android:id="@+id/change_state"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp10_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
		        android:layout_width="@dimen/dp1_w"
		        android:layout_height="match_parent"
		        android:background="@color/task_child_list_line"
		        android:visibility="visible" />
            
            <TextView
                android:id="@+id/change_content"
                android:layout_width="@dimen/dp248_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp10_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>
