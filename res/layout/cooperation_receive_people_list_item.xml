<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/cooperation_receive_people_checkbox"
        android:layout_width="@dimen/dp30_w"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10_w"
        android:button="@drawable/login_checkbox_button" />

    <TextView
        android:id="@+id/cooperation_receive_people_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/content_listview_header_text_color"
        android:textSize="@dimen/table_content_textsize" />

    <TextView
        android:id="@+id/cooperation_receive_people_department"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/content_listview_header_text_color"
        android:textSize="@dimen/table_content_textsize" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cooperation_receive_people_telphone"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/table_content_textsize" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

</LinearLayout>