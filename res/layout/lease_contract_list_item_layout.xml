<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/contract_code"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fix_id"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/contract_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp4_w"
            android:textColor="@color/black"
            android:textSize="@dimen/table_content_textsize" />

        <ImageView
            android:id="@+id/open_eye"
            android:layout_width="@dimen/dp36_w"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:paddingBottom="@dimen/dp8_h"
            android:paddingLeft="@dimen/dp8_w"
            android:paddingRight="@dimen/dp8_w"
            android:paddingTop="@dimen/dp8_h"
            android:scaleType="center"
            android:src="@drawable/arrow_double_right_white"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/contract_totle_money"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <TextView
        android:id="@+id/create_time"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

</LinearLayout>