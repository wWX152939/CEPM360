<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@color/task_home_list_table"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/dp200_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10_w" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon"
            android:gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="@dimen/table_content_textsize" />
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.TextProgressBar 
			    android:id="@+id/textProgressBar"
			    style="@android:style/Widget.ProgressBar.Horizontal"
			    android:layout_width="@dimen/dp140_w"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_vertical"
			    android:indeterminateOnly="false"
			    android:max="100"
			    android:maxHeight="@dimen/dp32_h"
			    android:minHeight="@dimen/dp32_h"
			    android:padding="@dimen/dp4_w"
			    android:progress="0"
			    android:progressDrawable="@drawable/progress_color_horizontal" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />
            
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>