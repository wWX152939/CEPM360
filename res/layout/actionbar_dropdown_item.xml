<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp40_h"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp10_w"
        android:padding="@dimen/dp4_w"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/title"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="@dimen/dp84_w"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp2_w"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/sp14_s"
        android:textColor="#5f6467" />
    
    <ImageView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null" />

</LinearLayout>
