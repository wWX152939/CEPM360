<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp4_h"
    android:layout_marginLeft="@dimen/dp10_w"
    android:layout_marginRight="@dimen/dp6_w"
    android:layout_marginBottom="@dimen/dp4_h"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp16_s"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center_vertical"/>
    
    <com.pm360.cepm360.app.common.view.ViewContainer 
        android:id="@+id/contacts_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/add_contacts"
        android:layout_toRightOf="@+id/label"
        android:layout_marginLeft="@dimen/dp16_w"
        android:layout_marginRight="@dimen/dp16_w"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

    </com.pm360.cepm360.app.common.view.ViewContainer>

    
    <ImageView 
        android:id="@+id/add_contacts"
        android:layout_width="@dimen/dp40_w"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_button_selector"
        android:paddingLeft="@dimen/dp8_w"
        android:paddingRight="@dimen/dp8_w"
        android:contentDescription="@null"
        android:src="@drawable/icn_add"/>
    
    <View 
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:layout_marginTop="@dimen/dp20_h"
        android:layout_alignLeft="@+id/label"
        android:layout_alignRight="@+id/add_contacts"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"/>
</RelativeLayout>
