<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/subcontract_serial_number"
        android:layout_width="@dimen/dp60_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wbrg_number"
        android:layout_width="@dimen/dp140_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subcontract_contract"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subcontract_total_money"
        android:layout_width="@dimen/dp140_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/creater"
        android:layout_width="@dimen/dp80_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subcontract_status"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

</LinearLayout>