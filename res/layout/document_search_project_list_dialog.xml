<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <!-- title bar -->
    <include 
        layout="@layout/dialog_title_bar"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40_h"
        android:background="@color/content_listview_header_bg"
        android:orientation="horizontal">
        
        <CheckBox 
            android:id="@+id/cb_select_all"
            android:layout_width="@dimen/dp50_w"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp24_w"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@drawable/login_checkbox_button"/>
                
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp20_w"
            android:textSize="@dimen/sp17_s"
            android:textColor="@android:color/black"
            android:text="@string/project_name"/>
        
    </LinearLayout> 
    
    <ListView
        android:id="@+id/project_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp320_h"
        android:textColor="@android:color/black" />
    
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
       <Button
           android:id="@+id/btn_ok"
           android:layout_width="@dimen/dp140_w"
           android:layout_height="@dimen/dp40_h"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/dp8_h"
           android:layout_marginBottom="@dimen/dp16_h"
           android:clickable="true"
           android:gravity="center"
           android:background="@drawable/button_corners_blue_bg"
           android:text="@string/confirm"
           android:textColor="@color/white"
           android:textSize="@dimen/dialog_button_textsize"/>
    </LinearLayout>
  
</LinearLayout>
