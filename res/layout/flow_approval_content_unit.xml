<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flow_approval_content_unit"
    android:layout_width="@dimen/dp700_w"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp5_w"
    android:fillViewport="true" 
    android:background="@drawable/flow_already_approval_content_bg"
    android:orientation="vertical">
    
   <LinearLayout     
        android:id="@+id/title_content"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
	    android:paddingTop="@dimen/dp10_h"
	    android:paddingBottom="@dimen/dp10_h"
    	android:gravity="center_vertical" >
    	
        <LinearLayout 	        
    	    android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1" 
        	android:gravity="center_vertical"
        	android:orientation="horizontal">       
    	
		    <ImageView 
		        android:id="@+id/unit_approval_people_title_image"
		        android:layout_width="@dimen/dp15_w"
		        android:layout_height="@dimen/dp15_h"
		        android:layout_marginLeft="@dimen/dp15_w"
		        android:src="@drawable/people_approval"/>        
	    
			<TextView
		        android:id="@+id/unit_approval_people_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:layout_marginLeft="@dimen/dp5_w"
		        android:text="@string/approver_view"
		        android:textColor="#777f8a"
		        android:textSize="@dimen/sp14_s"/>    
		
		    <TextView
		        android:id="@+id/unit_approval_people"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/dp5_w"
		        android:textColor="@color/black"
		        android:textSize="@dimen/sp14_s" />
	    
	    </LinearLayout>
		    
        <LinearLayout 	        
	   	    android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:orientation="horizontal">
		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:text="@string/approver_status_view"
		        android:textColor="#777f8a"
		        android:textSize="@dimen/sp14_s" />
		
		    <TextView
		        android:id="@+id/unit_approval_status"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/dp5_w"
		        android:gravity="right"
		        android:text="@string/pass"
		        android:textColor="#0000ff"
		        android:textSize="@dimen/sp14_s"/>
	    </LinearLayout>
	    
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="right|center_vertical">    
	        
			<ImageView 
			    android:id="@+id/time_image"
		        android:layout_width="@dimen/dp15_w"
		        android:layout_height="@dimen/dp15_h"
		        android:gravity="right|center_vertical"
		        android:src="@drawable/countersign_time_image"/>            
	
		    <TextView
		        android:id="@+id/unit_approval_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="right|center_vertical"
		        android:layout_marginLeft="@dimen/dp5_w"
		        android:layout_marginRight="@dimen/dp15_w"
		        android:textColor="#777f8a"
		        android:textSize="@dimen/sp14_s"/>
	    
	    </LinearLayout>
    
    </LinearLayout>
    
	<LinearLayout
	   	android:id="@+id/countersign_people"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/dp20_w"
	    android:layout_marginBottom="@dimen/dp5_h"
	    android:layout_marginRight="@dimen/dp15_w"
	    android:layout_centerVertical="true"
	    android:orientation="vertical"
	    android:layout_below="@+id/title_content"
	    android:background="#1256">
		    		    		    
	</LinearLayout>	   
	
    <LinearLayout     
        android:id="@+id/mark_content"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_below="@+id/countersign_people"
        android:paddingLeft="@dimen/dp15_w"
	    android:gravity="center_vertical">
	    
		<ImageView 
		    android:id="@+id/mark_image"
	        android:layout_width="@dimen/dp15_w"
	        android:layout_height="@dimen/dp15_h"
	        android:src="@drawable/approval_mark"/>	        
	
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/dp5_w"
	        android:text="@string/approver_mark_view"
	        android:textColor="#777f8a"
	        android:textSize="@dimen/sp14_s"/>
	    
	    <TextView
	        android:id="@+id/unit_approval_mark"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/dp5_w"
	        android:layout_marginRight="@dimen/dp10_w"
	        android:layout_gravity="center_vertical"
	        android:ellipsize="none"
	        android:maxLines="10"
	        android:scrollHorizontally="false"
	        android:singleLine="false"
	        android:textColor="@color/black"
	        android:textSize="@dimen/sp14_s"/>	
        
    </LinearLayout>

</RelativeLayout>
