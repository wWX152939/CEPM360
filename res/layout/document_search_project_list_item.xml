<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp40_h"
    android:orientation="horizontal" >
    
    <CheckBox 
        android:id="@+id/checkbox"
        android:layout_width="@dimen/dp50_w"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp24_w"
        android:layout_gravity="center"
        android:gravity="center"
        android:button="@drawable/login_checkbox_button"/>
    
    <TextView 
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp20_w"
        android:textSize="@dimen/sp15_s"
        android:textColor="@android:color/black" />     


</LinearLayout>
