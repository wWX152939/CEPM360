<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/email_contact_backgroud"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:id="@+id/contacts_info"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="@dimen/dp8_w"
	    android:background="@color/white"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:id="@+id/contacts_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/dp8_w"
	        android:layout_marginRight="@dimen/dp8_w"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@null"
	        android:src="@drawable/contact_header"/>
	    
	    <LinearLayout 
	        android:id="@+id/contacts_base_info"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="@dimen/dp8_w"
		    android:layout_gravity="center"
		    android:orientation="vertical">
	        
	        <TextView 
	            android:id="@+id/contacts_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/dp10_h"
	            android:gravity="center_vertical"
	            android:textColor="@color/black"
	            android:textStyle="bold"
	            android:textSize="@dimen/sp16_s"/>
	        
	        <LinearLayout 
		        android:id="@+id/contacts_company_department"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
	        
		        <TextView 
		            android:id="@+id/contacts_company"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:textColor="@color/black"
		            android:textSize="@dimen/sp16_s"/>
		        
		        <TextView 
		            android:id="@+id/contacts_department"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/dp8_w"
		            android:gravity="center_vertical"
		            android:textColor="@color/gray"
		            android:textSize="@dimen/sp16_s"/>
	        
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/dp1_h"
	    android:background="@color/light_gray"/>
	
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="none"
	    android:fadingEdge="vertical">
	    
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	        
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/dp10_h"
			    android:layout_marginBottom="@dimen/dp16_h"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:layout_width="@dimen/dp70_w"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:text="@string/sex"
			        android:textColor="@color/gray"
			        android:textSize="@dimen/sp16_s"/>
			    
			    <TextView 
			        android:id="@+id/contact_sex"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="@dimen/dp12_w"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/black"
			        android:textSize="@dimen/sp16_s"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/dp12_h"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:layout_width="@dimen/dp70_w"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:text="@string/email"
			        android:textColor="@color/gray"
			        android:textSize="@dimen/sp16_s"/>
			    
			    <TextView 
			        android:id="@+id/contact_mailbox"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="@dimen/dp12_w"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/black"
			        android:textSize="@dimen/sp16_s"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/dp12_h"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:layout_width="@dimen/dp70_w"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:text="@string/mobile"
			        android:textColor="@color/gray"
			        android:textSize="@dimen/sp16_s"/>
			    
			    <TextView 
			        android:id="@+id/contact_mobile"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="@dimen/dp12_w"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/black"
			        android:textSize="@dimen/sp16_s"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/dp12_h"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:layout_width="@dimen/dp70_w"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:text="@string/office_phone"
			        android:textColor="@color/gray"
			        android:textSize="@dimen/sp16_s"/>
			    
			    <TextView 
			        android:id="@+id/contact_office_phone"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="@dimen/dp12_w"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/black"
			        android:textSize="@dimen/sp16_s"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/dp10_h"
			    android:orientation="horizontal">
			    
			    <TextView 
			        android:layout_width="@dimen/dp70_w"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:text="@string/QQ_account"
			        android:textColor="@color/gray"
			        android:textSize="@dimen/sp16_s"/>
			    
			    <TextView 
			        android:id="@+id/contact_qq"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="@dimen/dp8_w"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/black"
			        android:textSize="@dimen/sp16_s"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
