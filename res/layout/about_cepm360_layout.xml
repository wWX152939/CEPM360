<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/app_icon"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="@dimen/dp100_h"
        android:layout_marginTop="@dimen/dp2_h"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@null" />
    
    <TextView 
        android:id="@+id/app_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/sp16_s"
        android:textColor="#888888" />
    
    
    <LinearLayout 
        android:layout_width="@dimen/dp540_w"
        android:layout_marginTop="@dimen/sp14_s"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:textSize="@dimen/dp24_h"
	        android:textColor="#888888"
	        android:text="@string/hotline_counseling" />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40_h"
        android:layout_marginLeft="@dimen/dp8_w"
        android:layout_marginRight="@dimen/dp8_w"
        android:layout_marginTop="@dimen/dp8_h"
        android:layout_marginBottom="@dimen/dp8_h">
        
	    <View
	        android:id="@+id/divider"
	        android:layout_width="@dimen/dp2_w"
	        android:layout_height="@dimen/dp16_h"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:background="#888888"
	        android:visibility="visible" />

	    <TextView
	        android:id="@+id/user_agreement"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="@dimen/dp24_w"
	        android:layout_toLeftOf="@+id/divider"
	        android:text="@string/user_agreement"
	        android:textColor="#888888"
	        android:textSize="@dimen/sp20_s"/>

	    <TextView
	        android:id="@+id/follow_weibo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/dp24_w"
	        android:layout_toRightOf="@+id/divider"
	        android:text="@string/following_weibo"
	        android:textColor="#888888"
	        android:textSize="@dimen/sp20_s"/>
        
    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp12_h"
        android:gravity="center"
        android:text="@string/copyright"
        android:textSize="@dimen/sp16_s"
        android:textColor="#888888" />
    
</LinearLayout>
