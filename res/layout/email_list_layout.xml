<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp55_h"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp24_h"
        android:layout_marginLeft="@dimen/dp8_w"
    	android:layout_marginTop="@dimen/dp6_h"
    	android:layout_marginRight="@dimen/dp12_w"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/email_list_read_flag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/email_list_time"
            android:layout_toRightOf="@+id/email_list_read_flag"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">
        
	        <TextView 
	            android:id="@+id/email_list_sender"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/dp8_w"
	            android:singleLine="true"
	            android:drawablePadding="@dimen/dp4_w"
	            android:gravity="center_vertical"
	            android:textColor="@color/black"
	            android:textSize="@dimen/content_tree_text_size"/>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/email_list_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp6_w"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp14_s"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp24_h"
        android:layout_marginLeft="@dimen/dp24_w"
        android:layout_marginRight="@dimen/dp12_w"
        android:orientation="horizontal">
        
    	<TextView 
            android:id="@+id/email_list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp2_w"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp14_s"/>
    	
    </LinearLayout>
</LinearLayout>
