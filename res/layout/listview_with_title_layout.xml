<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp480_w"
    android:layout_height="@dimen/dp360_h"
    android:background="@drawable/email_contact_backgroud"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48_h"
        android:background="@drawable/corners_top_blue"
        android:orientation="vertical">
        
	    <TextView 
	        android:id="@+id/list_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/dp12_h"
	        android:layout_marginBottom="@dimen/dp12_h"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="@dimen/sp18_s"
	        android:background="@android:color/transparent"/>
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:background="#F1F1F1"/>
    
    <!-- android:divider="#E1E1E1" -->
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="#F1F1F1"
        android:dividerHeight="1px" />

</LinearLayout>
