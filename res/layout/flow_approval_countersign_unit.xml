<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flow_approval_countersign_unit"
    android:layout_width="@dimen/dp700_w"
    android:layout_height="wrap_content"
    android:fillViewport="true" 
    android:paddingTop="@dimen/dp5_h"
    android:paddingBottom="@dimen/dp5_h"
    android:background="@drawable/countersign_bg_selector"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/countersign_people_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10_w"
        android:text="@string/approver_countersign"
        android:textColor="#777f8a"
        android:textSize="@dimen/sp14_s"/>    
    
    <TextView
        android:id="@+id/countersign_people_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="@dimen/dp5_w"
        android:textColor="@color/black"
        android:textSize="@dimen/sp14_s"/>

    <TextView
        android:id="@+id/countersign_time_or_notices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#777f8a"
        android:text="@string/approver_countersign_mark_notices"
        android:textSize="@dimen/sp14_s" />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    
	    <ImageView 
	        android:id="@+id/countersign_delete"
	        android:layout_width="@dimen/dp15_w"
	        android:layout_height="@dimen/dp15_h"
	        android:visibility="invisible"
			android:layout_gravity="center"
	        android:src="@drawable/countersign_delete_image"/>   
	</LinearLayout>             
</LinearLayout>
