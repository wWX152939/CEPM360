<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eps_item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp36_h"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp25_w"
        android:layout_height="@dimen/dp25_h"
        android:src="@drawable/triangle_right"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_marginRight="@dimen/dp4_w"
        android:contentDescription="@string/app_name"/>
    
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/dp16_w"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp4_w"
        android:scaleType="fitCenter"
        android:src="@drawable/eps_menu"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:gravity="center|left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp15_s" />

</LinearLayout>
