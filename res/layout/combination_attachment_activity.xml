<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/attach_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:textColor="#ffffff"
        android:text="@string/attachment"
        android:textSize="@dimen/sp16_s" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5_h"
        android:layout_marginLeft="@dimen/dp60_w"
        android:layout_marginTop="@dimen/dp5_h"
        android:background="@drawable/attach_bg"
        android:orientation="vertical" >
	    
	    <HorizontalScrollView 
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent">
	    	<LinearLayout 
	    	    android:layout_width="wrap_content"
		    	android:layout_height="@dimen/dp140_h">
			    <GridView
			        android:id="@+id/gridview" 
			        android:layout_width="500dp"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="@dimen/dp10_h"
			        android:layout_marginLeft="@dimen/dp20_w"
			        android:layout_marginRight="@dimen/dp20_w"
			        android:layout_marginBottom="@dimen/dp20_h"
			        android:columnWidth="@dimen/dp120_w"
			        android:numColumns="5"
			        android:horizontalSpacing="@dimen/dp2_w"
			        android:verticalSpacing="@dimen/dp4_h"
			        android:gravity="center"
			        android:padding="@dimen/dp4_h"
			        android:stretchMode="columnWidth" 
			        android:src="@drawable/picture_add"
			        android:background="#E1E5F0">
			    </GridView>
		    </LinearLayout>
	    </HorizontalScrollView>
	</LinearLayout>
</LinearLayout>
