<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_list_title_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/mult_select"
        android:layout_width="@dimen/dp30_w"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10_w"
        android:button="@drawable/login_checkbox_button"
        android:visibility="gone" />

    <View
        android:id="@+id/select_right_view"
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="@dimen/dp80_w"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16_s" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lease_number"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 工种 -->

            <TextView
                android:id="@+id/work_type"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 名称 -->

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 规格 -->

            <TextView
                android:id="@+id/specifications"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 数量 -->

            <TextView
                android:id="@+id/amount"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 单价 -->

            <TextView
                android:id="@+id/unit_price"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <TextView
                android:id="@+id/operator"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 开始日期 -->

            <TextView
                android:id="@+id/start_date"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />

            <!-- 结束日期 -->

            <TextView
                android:id="@+id/end_time"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16_s" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>