<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_browse_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:background="@drawable/page_background"
    android:orientation="horizontal">
    
    <LinearLayout
        android:id="@+id/tree_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/document_treeview_bg"
        android:layout_marginLeft="@dimen/dp5_w"
        android:layout_marginRight="@dimen/dp5_w"
        android:layout_marginBottom="@dimen/dp5_h"
        android:layout_marginTop="@dimen/dp5_h"
        android:layout_weight="1">    
        <ListView
        	android:id="@+id/file_dir_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5_w"
            android:layout_marginRight="@dimen/dp5_w"
            android:layout_marginBottom="@dimen/dp5_h"
            android:layout_marginTop="@dimen/dp10_h"
            android:divider="#c5005880"
        	android:dividerHeight="1px"/>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/tree_view_layout"
	    android:layout_alignRight="@id/tree_view_layout"
	    android:orientation="vertical">
	    <ImageView 
	        android:id="@+id/confirm"
	        android:layout_width="@dimen/dp60_w"
	        android:layout_height="@dimen/dp60_h"
	        android:src="@drawable/floating_menu_publish"/>
	    
	    <ImageView 
	        android:id="@+id/exit"
	        android:layout_width="@dimen/dp60_w"
	        android:layout_height="@dimen/dp60_h"
	        android:src="@drawable/icn_close"/>
	    
	</LinearLayout>
	
</RelativeLayout>
