<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_child_list_line"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/dp50_w"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/content_listview_header_text_color"
        android:textSize="@dimen/table_content_textsize"/>

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp150_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/table_content_textsize"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize"/>
            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize"/>
            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/dp200_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" >
            </TextView>  
            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/dp50_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/content_listview_header_text_color"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize"/>
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_child_list_line"
        android:visibility="visible" />
    
</LinearLayout>


