<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp40_h"
    android:orientation="horizontal" >
    
    <CheckBox 
        android:id="@+id/checkbox"
        android:layout_width="@dimen/dp36_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|right"
        android:layout_marginLeft="@dimen/dp14_w"
        android:button="@drawable/login_checkbox_button"/>
    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"        
        android:layout_weight="2"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>
        
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
        

    <TextView
        android:id="@+id/role"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>
    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/department"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>

    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/mobile"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp16_s"/>

</LinearLayout>
