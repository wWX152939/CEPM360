<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_list_title_height"
    android:background="@drawable/task_child_list_title_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/supplier_name"
        android:layout_width="@dimen/dp240_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/supplier_contacts"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/supplier_tel"
        android:layout_width="@dimen/dp160_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/supplier_addr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

</LinearLayout>
