<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal" >
    
	<View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />     

    <TextView
        android:id="@+id/message_index"
        android:layout_width="@dimen/dp60_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="@color/table_line"
        android:textSize="@dimen/table_content_textsize"/>

    <TextView
        android:id="@+id/message_title"
        android:layout_width="@dimen/dp450_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:singleLine="false"
        android:textColor="@color/table_line"
        android:textSize="@dimen/table_content_textsize"/>


    <TextView
        android:id="@+id/message_time"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:singleLine="false"
        android:textColor="@color/table_line"
        android:textSize="@dimen/table_content_textsize"/>

    <TextView
        android:id="@+id/message_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|left"
        android:singleLine="false"
        android:textColor="@color/table_line"
        android:textSize="@dimen/table_content_textsize"/>
    
	<View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />     

</LinearLayout>
