<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_home_list_title"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/left_title_container"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/task_home_list_title"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10_w" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/dp140_w"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/task_home_list_title_text"
            android:textSize="@dimen/sp16_s" />

        <ImageView
            android:id="@+id/attr_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv1"
            android:paddingBottom="@dimen/schedule_attr_button_padding_height"
            android:paddingRight="@dimen/dp10_w"
            android:paddingTop="@dimen/schedule_attr_button_padding_height"
            android:src="@drawable/arrow_double_left" />
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/task_home_list_title"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp140_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
            	android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/sp16_s" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>