<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">
	
    <LinearLayout
        android:id="@+id/popup_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10_w"
        android:layout_marginRight="@dimen/dp10_w"
        android:layout_marginBottom="@dimen/dp10_h"
        android:layout_marginTop="@dimen/dp10_h"
        android:background="@drawable/task_make_longclick"
        android:gravity="center"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/tv_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginBottom="0dp"
	        android:layout_marginLeft="@dimen/dp10_w"
	        android:layout_marginRight="@dimen/dp10_w"
	        android:layout_marginTop="0dp"
	        android:text="@string/more_attributes"
	        android:textSize="@dimen/sp20_s"/>
		
	    <View
	        android:layout_width="1px"
	        android:layout_height="@dimen/dp25_h"
	        android:background="@color/popup_divider"
	        android:visibility="visible" />
	    
	    <TextView
	        android:id="@+id/tv_add_task"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginBottom="0dp"
	        android:layout_marginLeft="@dimen/dp10_w"
	        android:layout_marginRight="@dimen/dp10_w"
	        android:layout_marginTop="0dp"
	        android:text="Task"
	        android:textSize="@dimen/sp20_s"/>
		
	    <View
	        android:layout_width="1px"
	        android:layout_height="@dimen/dp25_h"
	        android:background="@color/popup_divider"
	        android:visibility="visible" />
	
	    <TextView
	        android:id="@+id/tv_del"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginBottom="0dp"
	        android:layout_marginLeft="@dimen/dp10_w"
	        android:layout_marginRight="@dimen/dp10_w"
	        android:layout_marginTop="0dp"
	        android:text="@string/delete"
	        android:textSize="@dimen/sp20_s"/>
	
	</LinearLayout>

</LinearLayout>
