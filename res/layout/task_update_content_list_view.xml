<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp62_h"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/task_name"
        android:layout_width="@dimen/dp124_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp24_w"
        android:textColor="@android:color/white"
        android:text="@string/task_name"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#217f7f9c" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/change_person"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/contract_owner"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/change_type"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/change_type"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/plan_start"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/plan_start"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/plan_end"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/plan_complete"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/change_start"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/change_start"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />
            <TextView
                android:id="@+id/change_end"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/change_complete"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />
            <TextView
                android:id="@+id/applicant"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/proposer"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />
            <TextView
                android:id="@+id/applicant_data"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:text="@string/contract_apply_date"
                android:textSize="@dimen/sp14_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>
