<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="@dimen/dp60_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <TextView
        android:id="@+id/role_code"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13_s" />

    <TextView
        android:id="@+id/role_permission_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13_s" />

    <TextView
        android:id="@+id/role_permission_assigned"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13_s" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

</LinearLayout>