<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp36_h"
    android:orientation="horizontal" >
    
	<TextView 
	    android:id="@+id/title"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:textColor="#282c33"
	    android:gravity="left|center_vertical" />
	
	<TextView 
		android:id="@+id/tag"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_toRightOf="@+id/title"
		android:layout_marginTop="@dimen/dp6_w"
		android:layout_marginBottom="@dimen/dp6_w"
		android:layout_marginLeft="@dimen/dp20_w"
		android:layout_marginRight="@dimen/dp6_w"
		android:textColor="#282c33"
		android:gravity="center"/>
    
    <RelativeLayout 
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
           
	    <TextView 
	        android:id="@+id/time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true" 	        
	        android:textSize="@dimen/sp12_s"
	        android:textColor="#282c33"
	        android:gravity="right|center_vertical"/>
	    
	    <TextView 
	        android:id="@+id/date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/time"
	        android:layout_alignRight="@+id/time"        
	        android:textSize="@dimen/sp12_s"
	        android:textColor="#282c33"
	        android:gravity="right|center_vertical"/>
	    
    </RelativeLayout>
</RelativeLayout>
