<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp8_w"
    android:layout_marginTop="@dimen/dp8_h"
    android:layout_marginRight="@dimen/dp8_w"
    android:orientation="vertical" >
    
    <!-- 邮件附件容器 -->
    <LinearLayout
        android:id="@+id/email_attachment_layout"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/dp4_w"
	    android:layout_marginBottom="@dimen/dp8_h"
	    android:orientation="vertical">
        
    </LinearLayout>
	
	<View
	    android:id="@+id/line_blow_attachment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:background="#E2E2E2"
        android:visibility="gone" />
	
	<TextView 
	    android:id="@+id/email_content_body"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/dp12_h"
	    android:textColor="@color/black"
	    android:textSize="@dimen/sp16_s"/>
	
</LinearLayout>
