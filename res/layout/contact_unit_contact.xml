<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <include
	        android:id="@+id/listHeaderView"
	        layout="@layout/contact_unit_contact_list_item" />
	
	    <ListView
	        android:id="@+id/listView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:cacheColorHint="#52555c"
	        android:clickable="true"
	        android:divider="@color/setting_list_divider"
	        android:dividerHeight="@dimen/dp1_w"
	        android:focusable="false"
	        android:background="@drawable/setting_list_item_background"
	        android:scrollbars="none" />
	
	</LinearLayout>
      <com.pm360.cepm360.app.common.view.FloatingMenuView
	      android:id="@+id/contact_unit_contact_floating_menu"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_gravity="bottom|right"
	      android:layout_marginBottom="@dimen/dp16_h"
	      android:layout_marginEnd="@dimen/dp184_w"
	      android:clickable="true"
	      android:src="@drawable/btn_add" />
      
</FrameLayout>
