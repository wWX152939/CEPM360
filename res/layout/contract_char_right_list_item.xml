                android:id="@+id/tv5"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/table_padding_left"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalTextView
                android:id="@+id/tv6"
