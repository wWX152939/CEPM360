<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/table_height"
    android:layout_gravity="center_vertical"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />
    <!-- 序号 -->

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="@dimen/dp80_w"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:visibility="gone" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <!-- 工种 -->

            <TextView
                android:id="@+id/work_type"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 分包内容 -->

            <TextView
                android:id="@+id/subcontract_content"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 单位 -->

            <TextView
                android:id="@+id/unit"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 数量 -->

            <TextView
                android:id="@+id/amount"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 单价 -->

            <TextView
                android:id="@+id/unit_price"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 金额 -->

            <TextView
                android:id="@+id/total_price"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 施工队 -->

            <TextView
                android:id="@+id/construction"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 所用部位 -->

            <TextView
                android:id="@+id/use_place"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 进场时间 -->

            <TextView
                android:id="@+id/approach_time"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- 撤出时间 -->

            <TextView
                android:id="@+id/out_time"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@android:color/black"
                android:textSize="@dimen/table_content_textsize" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/content_listview_edge_bg"
        android:visibility="visible" />

</LinearLayout>