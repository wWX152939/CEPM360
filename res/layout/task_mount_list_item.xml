<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@drawable/table_header_background"
    android:orientation="horizontal" >

    <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
        android:id="@+id/task_name"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dp10_w"
        android:textSize="@dimen/table_content_textsize" />
    
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/plan_duration"
                android:layout_width="@dimen/dp70_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:id="@+id/plan_duration_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/start_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:id="@+id/start_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/end_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:id="@+id/end_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/status"
                android:layout_width="@dimen/dp60_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:id="@+id/status_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_duration"
                android:layout_width="@dimen/dp70_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_start_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textCursorDrawable="@null"
                android:focusableInTouchMode="false"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_end_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textCursorDrawable="@null"
                android:focusableInTouchMode="false"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/task_progress"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:focusableInTouchMode="false"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/table_padding_left"
                android:paddingRight="@dimen/dp10_w"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>
            
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/owner"
                android:layout_width="@dimen/dp60_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/task_type"
                android:layout_width="@dimen/dp200_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
            	android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize"/>

        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>
</LinearLayout>
