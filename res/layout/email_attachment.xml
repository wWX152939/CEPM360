<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/email_attachment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp6_w"
        android:layout_marginBottom="@dimen/dp6_h"
        android:layout_marginTop="@dimen/dp6_h"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp8_w"
        android:singleLine="true"
        android:maxWidth="@dimen/dp540_w"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16_s"/>
    
    <TextView 
        android:id="@+id/email_attachment_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp6_w"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp16_s"/>

</LinearLayout>
