<?xml version="1.0" encoding="utf-8"?>
<com.pm360.cepm360.app.common.view.SHWhiteLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tree_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp4_w"
        android:layout_marginRight="@dimen/dp4_w"
        android:contentDescription="@string/app_name"/>
    
    <ImageView
        android:id="@+id/type"
        android:layout_width="@dimen/dp18_w"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_marginRight="@dimen/dp2_w"
        android:visibility="gone" 
        android:contentDescription="@string/app_name"/>
    
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/type"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dp2_w"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/content_tree_text_size"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"/>
    
   <com.pm360.cepm360.app.common.view.CHScrollView
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:visibility="gone"
    android:tag="CHScrollView" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

   </com.pm360.cepm360.app.common.view.CHScrollView>
