<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48_h"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginLeft="@dimen/dp8_w"
	    android:layout_marginRight="@dimen/dp8_w"
	    android:layout_marginTop="@dimen/dp3_w"
	    android:orientation="horizontal">
	    
        <TextView 
            android:id="@+id/contact_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14_s"/>
        
        <TextView 
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp14_s"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginLeft="@dimen/dp8_w"
	    android:layout_marginRight="@dimen/dp8_w"
	    android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/contact_company_department"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sp14_s"/>
        
    </LinearLayout>

</LinearLayout>
