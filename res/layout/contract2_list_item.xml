<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/contract_number"
        android:layout_width="@dimen/dp150_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contract_name"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/table_content_textsize" />

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/contract_total"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#c5707070"
                android:visibility="gone" />

            <TextView
                android:id="@+id/paymented"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#c5707070"
                android:visibility="gone" />

            <TextView
                android:id="@+id/unpayment"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#c5707070"
                android:visibility="gone" />

            <TextView
                android:id="@+id/change_record"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#c5707070"
                android:visibility="gone" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#c5707070"
                android:visibility="gone" />

            <TextView
                android:id="@+id/type"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/black"
                android:textSize="@dimen/table_content_textsize" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>