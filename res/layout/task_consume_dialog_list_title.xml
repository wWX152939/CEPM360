<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp40_h"
    android:background="@color/listview_header_bg"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/select"
        android:layout_width="@dimen/dp40_w"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp8_w"
        android:gravity="center"
        android:textColor="@color/white"
        android:button="@drawable/login_checkbox_button"
        android:textSize="@dimen/sp16_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/consume_name"
        android:layout_width="@dimen/dp160_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/consume_type"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consume_spec"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#c5707070"
                android:visibility="visible" />

            <TextView
                android:id="@+id/consume_unit"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s"/>
		</LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>
