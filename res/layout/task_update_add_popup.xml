<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp1000_w"
    android:layout_height="@dimen/dp1000_h"
    android:background="@drawable/task_make_feedback_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="@dimen/dp800_w"
        android:layout_height="@dimen/dp50_h"
        android:background="#505157"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/exit_imageview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10_w"
            android:layout_marginTop="@dimen/dp10_h"
            android:layout_marginBottom="@dimen/dp10_h"
            android:layout_marginRight="@dimen/dp10_w"
            android:background="@drawable/dialog_button_close_bg"
            android:src="@drawable/popup_exit" />

        <ImageView
            android:id="@+id/save_imageview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignTop="@id/exit_imageview"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/exit_imageview"
            android:src="@drawable/popup_save" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15_w"
            android:text="@string/add_project"
            android:textSize="@dimen/sp18_s"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="@dimen/dp800_w"
        android:layout_height="@dimen/dp380_h"
        android:layout_below="@id/title"
        android:background="#3b3b41" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15_w"
                    android:layout_marginRight="@dimen/dp15_w"
                    android:layout_marginBottom="@dimen/dp15_h"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:text="@string/contract_change_number"
                    android:textSize="@dimen/sp18_s"/>

                <EditText
                    android:id="@+id/update_id_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp120_w"
                    android:layout_marginTop="@dimen/dp10_h"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_change_number" />
            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="#77757b" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15_w"
                    android:layout_marginRight="@dimen/dp15_w"
                    android:layout_marginBottom="@dimen/dp15_h"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:text="@string/plan_change_title"
                    android:textSize="@dimen/sp18_s"/>

                <EditText
                    android:id="@+id/update_title_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp120_w"
                    android:layout_marginTop="@dimen/dp10_h"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_change_title" />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="#77757b" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15_w"
                    android:layout_marginRight="@dimen/dp15_w"
                    android:layout_marginBottom="@dimen/dp15_h"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:text="@string/plan_change_date"
                    android:textSize="@dimen/sp18_s"/>

                <EditText
                    android:id="@+id/update_time_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp120_w"
                    android:layout_marginTop="@dimen/dp10_h"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_change_date" />

                <ImageView
                    android:id="@+id/edit_date_image"
                    android:layout_width="@dimen/dp15_w"
                    android:layout_height="@dimen/dp15_h"
                    android:layout_marginRight="@dimen/dp5_w"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:src="@drawable/calendar" />
            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="#77757b" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15_w"
                    android:layout_marginRight="@dimen/dp15_w"
                    android:layout_marginBottom="@dimen/dp15_h"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:text="@string/change_content"
                    android:textSize="@dimen/sp18_s"/>

                <EditText
                    android:id="@+id/update_content_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp120_w"
                    android:layout_marginTop="@dimen/dp10_h"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_change_content" />
            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="#77757b" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/update_influence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15_w"
                    android:layout_marginRight="@dimen/dp15_w"
                    android:layout_marginBottom="@dimen/dp15_h"
                    android:layout_marginTop="@dimen/dp15_h"
                    android:text="@string/change_effect"
                    android:textSize="@dimen/sp18_s"/>

                <EditText
                    android:id="@+id/update_influence_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp120_w"
                    android:layout_marginTop="@dimen/dp10_h"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_change_effect" />
            </LinearLayout>

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="#77757b" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
