<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_list_title_height"
    android:background="@drawable/task_child_list_title_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/material_name"
        android:layout_width="@dimen/dp160_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/resource_classification"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/resource_type"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/specification"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="@dimen/dp80_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/unit_price"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|right"
        android:paddingRight="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="visible" />

    <TextView
        android:id="@+id/supplier_name"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp14_s"/>

</LinearLayout>
