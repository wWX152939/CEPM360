<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@color/task_home_list_title"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="@dimen/dp520_w"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">
        <ImageView
	        android:id="@+id/icon"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginRight="@dimen/dp10_w"/>
	    
	    <TextView
	        android:id="@+id/plan_wbs_name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center|left"
			android:paddingLeft="@dimen/table_padding_left"
	        android:textColor="@android:color/black"
	        android:textSize="@dimen/sp14_s"/>
    </LinearLayout>
    
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />
    <TextView
        android:id="@+id/plan_duration"
        android:layout_width="@dimen/dp80_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
    	android:textColor="@color/task_home_list_title_text"
        android:textSize="@dimen/table_title_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="@dimen/dp160_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
    	android:textColor="@color/task_home_list_title_text"
        android:textSize="@dimen/table_title_textsize" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="@dimen/dp160_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
    	android:textColor="@color/task_home_list_title_text"
        android:textSize="@dimen/table_title_textsize" />

</LinearLayout>
