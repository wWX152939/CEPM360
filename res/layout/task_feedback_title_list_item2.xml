<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_home_list_title"
    android:orientation="horizontal" >

    <com.pm360.cepm360.app.common.view.SHWhiteLinearLayout
        android:id="@+id/left_title_container"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/task_home_list_title"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10_w" >

        <TextView
            android:id="@+id/task_name"
            android:layout_width="@dimen/dp100_w"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/task_home_list_title_text"
            android:textSize="@dimen/table_title_textsize" />
        
		<LinearLayout
		     android:id="@+id/switch_button"
		     android:layout_width="@dimen/dp50_w"
		     android:layout_height="fill_parent">
		
		     <ImageView
		         android:layout_width="@dimen/dp30_w"
		         android:layout_height="@dimen/dp25_h"
		         android:layout_gravity="center"
		         android:layout_marginLeft="@dimen/dp10_w"
		         android:background="@drawable/task_switch_view_bg" />
		
		 </LinearLayout>

			<ImageView
			    android:id="@+id/attr_button"
			    android:layout_width="@dimen/dp50_w"
			    android:layout_height="fill_parent"
			    android:layout_toRightOf="@id/switch_button"
			    android:paddingBottom="@dimen/schedule_attr_button_padding_height"
			    android:paddingRight="@dimen/dp10_w"
			    android:paddingTop="@dimen/schedule_attr_button_padding_height"
			    android:src="@drawable/arrow_double_left" />
    </com.pm360.cepm360.app.common.view.SHWhiteLinearLayout>
            
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/plan_duration"
                android:layout_width="@dimen/dp70_w"
                android:layout_height="match_parent"
            	android:textColor="@color/task_home_list_title_text"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:id="@+id/plan_duration_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/start_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
            	android:textColor="@color/task_home_list_title_text"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:id="@+id/start_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/end_time"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
            	android:textColor="@color/task_home_list_title_text"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:id="@+id/end_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/status"
                android:layout_width="@dimen/dp60_w"
                android:layout_height="match_parent"
            	android:textColor="@color/task_home_list_title_text"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:id="@+id/status_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_duration"
                android:layout_width="@dimen/dp70_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_start_time"
                android:layout_width="@dimen/dp100_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>
            
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/actual_end_time"
                android:layout_width="@dimen/dp100_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>
            
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/task_progress"
                android:layout_width="@dimen/dp70_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/owner"
                android:layout_width="@dimen/dp60_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/department"
                android:layout_width="@dimen/dp100_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/table_title_textsize"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <com.pm360.cepm360.app.common.view.ScrollHorizontalWhiteTextView
                android:id="@+id/task_type"
                android:layout_width="@dimen/dp300_w"
            	android:textColor="@color/task_home_list_title_text"
                android:layout_height="match_parent"
                android:textSize="@dimen/table_title_textsize"/>

        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>
</LinearLayout>
