<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_height"
    android:orientation="horizontal" >
    
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />    
    <ImageView
    	android:id="@+id/file_image"
        android:layout_width="@dimen/dp50_w"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp6_h"
        android:paddingBottom="@dimen/dp6_h"
        android:scaleType="centerInside"
        android:gravity="center"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/file_type"
        android:layout_width="@dimen/dp50_w"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="@string/type"
        android:textSize="@dimen/table_title_textsize"
        android:textColor="@android:color/black"
        android:visibility="gone"/>
    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dp200_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"        
        android:layout_weight="3"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/table_content_textsize"/>
        
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
        

    <TextView
        android:id="@+id/belong_project"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/table_content_textsize"/>
    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/belong_folder"
        android:layout_width="@dimen/dp180_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp4_w"
        android:textColor="@android:color/black"
        android:textSize="@dimen/table_content_textsize"/>

    
    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/create_date"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/table_content_textsize"/>
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="@color/divider"
        android:visibility="visible" />
</LinearLayout>

