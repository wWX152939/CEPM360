<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_list_title_height"
    android:background="@drawable/task_child_list_title_background"
    android:orientation="horizontal" >
    
    <CheckBox
        android:id="@+id/mult_select"
        android:layout_width="@dimen/dp30_w"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10_w"
        android:button="@drawable/login_checkbox_button"
        android:visibility="gone" />

    <View
        android:id="@+id/select_right_view"
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#c5707070"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/serial_number"
        android:layout_width="@dimen/dp70_w"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/content_listview_header_text_color"
        android:textSize="@dimen/sp16_s"/>

    <TextView
        android:id="@+id/company_name"
        android:layout_width="@dimen/dp150_w"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/table_padding_left"
        android:textColor="@color/content_listview_header_text_color"
        android:textSize="@dimen/sp16_s"/>

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/company_type"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/sp16_s"/>

            <TextView
                android:id="@+id/contacts"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/sp16_s"/>
            
            <TextView
                android:id="@+id/tel"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/sp16_s"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/sp16_s"/>

            <TextView
                android:id="@+id/permission"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/table_padding_left"
                android:textColor="@color/content_listview_header_text_color"
                android:textSize="@dimen/sp16_s"/>
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>
