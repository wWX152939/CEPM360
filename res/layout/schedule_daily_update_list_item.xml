<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp62_h"
    android:background="#00a9b3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/task_name"
        android:layout_width="@dimen/dp124_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp24_w"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp28_s"/>

    <View
        android:layout_width="@dimen/dp1_w"
        android:layout_height="match_parent"
        android:background="#217f7f9c" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/task_status"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/task_percentage"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/task_feedback_content"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/task_feedback_man"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/task_feedback_time"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />

            <TextView
                android:id="@+id/task_attachement"
                android:layout_width="@dimen/dp124_w"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp24_w"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp18_s"/>

            <View
                android:layout_width="@dimen/dp1_w"
                android:layout_height="match_parent"
                android:background="#217f7f9c" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>
