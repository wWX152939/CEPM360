<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
             
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/dp35_h"
	    android:orientation="horizontal" >   
	    
        <View
	        android:layout_width="@dimen/dp1_w"
	        android:layout_height="match_parent"
	        android:background="@color/divider"
	        android:visibility="visible"/>        
 
	    <TextView
	        android:id="@+id/total"
	        android:layout_width="@dimen/dp100_w"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="@string/accounting_total"
	        android:textColor="@color/black"
	        android:textSize="@dimen/sp18_s"/>
	    
        <View
	        android:layout_width="@dimen/dp1_w"
	        android:layout_height="match_parent"
	        android:background="@color/divider"
	        android:visibility="visible"/>	 
	        
	    <TextView
	        android:id="@+id/total_content"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingLeft="@dimen/dp10_w"
	        android:gravity="center_vertical"
	        android:textColor="@color/black"
	        android:textSize="@dimen/sp18_s"/>
        <View
	       android:layout_width="@dimen/dp1_w"
	       android:layout_height="match_parent"
	       android:background="@color/divider"
	       android:layout_marginLeft="-1dp"
	       android:visibility="visible" />         
        
    </LinearLayout>

	<View
	    android:id="@+id/line1"
	     android:layout_width="match_parent"
	     android:layout_height="@dimen/dp1_h"
	     android:background="@color/divider"
	     android:visibility="visible"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/dp70_h"
	    android:orientation="horizontal" > 
	    
        <View
	        android:layout_width="@dimen/dp1_w"
	        android:layout_height="match_parent"
	        android:background="@color/divider"
	        android:visibility="visible"/>        
 
	    <TextView
	        android:id="@+id/remark"
	        android:layout_width="@dimen/dp100_w"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="@string/note"
	        android:textColor="@color/black"
	        android:textSize="@dimen/sp18_s"/>
	            
        <View
	        android:layout_width="@dimen/dp1_w"
	        android:layout_height="match_parent"
	        android:background="@color/divider"
	        android:visibility="visible"/>	
	        
	    <EditText
	        android:id="@+id/remark_content_edit"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:background="@null"
	        android:layout_marginStart="@dimen/dp10_w"
	        android:textCursorDrawable="@null"
	        android:textColor="@color/black"
	        android:textSize="@dimen/sp18_s"/>
        <View
	       android:layout_width="@dimen/dp1_w"
	       android:layout_height="match_parent"
	       android:background="@color/divider"
	       android:layout_marginLeft="-1dp"
	       android:visibility="visible" />      	    
        
    </LinearLayout>    

    <View
	     android:layout_width="match_parent"
	     android:layout_height="@dimen/dp1_h"
	     android:background="@color/divider"
	     android:visibility="visible"/>
    
</LinearLayout>
