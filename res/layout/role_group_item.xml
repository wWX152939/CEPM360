<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer_grid1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/appImg1"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14.0dip"
            android:background="@color/black"
            android:contentDescription="@string/project"
            android:gravity="center"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <CheckedTextView
                android:id="@+id/appActic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />

            <CheckedTextView
                android:id="@+id/appActic2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />

            <CheckedTextView
                android:id="@+id/appActic3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />

            <CheckedTextView
                android:id="@+id/appActic4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />

            <CheckedTextView
                android:id="@+id/appActic5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />

            <CheckedTextView
                android:id="@+id/appActic6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:checkMark="@drawable/table_checkbox_button"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ff404040"
                android:textSize="15.0sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1_w"
            android:layout_height="match_parent"
            android:background="@color/content_listview_edge_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:background="@color/content_listview_edge_bg" />

</LinearLayout>