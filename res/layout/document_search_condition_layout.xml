<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cepm="http://schemas.android.com/apk/res/com.pm360.cepm360"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60_h"
        android:background="#F8323242"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40_h"
            android:layout_marginLeft="@dimen/dp10_w"
            android:layout_marginRight="@dimen/dp10_w"
            android:layout_marginBottom="@dimen/dp10_h"
            android:layout_marginTop="@dimen/dp10_h"
            android:background="@drawable/search_input_edit_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_content"
                android:layout_width="@dimen/dp40_w"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp4_w"
                android:gravity="center"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_content_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:paddingLeft="@dimen/dp4_w"
                android:singleLine="true"
                android:hint="@string/input_key_word"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp17_s"/>

            <ImageView
                android:id="@+id/clear_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp4_w"
                android:src="@drawable/ic_clear_input"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100_h"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/dp120_w"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/document_type"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp17_s"/>

        <View
            android:layout_width="@dimen/dp1_w"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/checkbox_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50_h"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkbox_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_word"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_excel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_picture"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_txt"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1_h"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50_h"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkbox_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_pdf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:padding="@dimen/dp2_w"
                    android:text="@string/type_powerpoint"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_autoCAD"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>

                <CheckBox
                    android:id="@+id/checkbox_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_margin="@dimen/dp4_w"
                    android:layout_weight="1"
                    android:button="@drawable/document_checkbox_button"
                    android:paddingLeft="@dimen/dp6_w"
                    android:paddingRight="@dimen/dp6_w"
                    android:paddingBottom="@dimen/dp6_h"
                    android:paddingTop="@dimen/dp6_h"
                    android:text="@string/type_other"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50_h"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/dp120_w"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/create_date"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp17_s"/>

        <View
            android:layout_width="@dimen/dp1_w"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp4_h"
            android:layout_marginStart="@dimen/dp10_w"
            android:layout_marginTop="@dimen/dp4_h"
            android:gravity="center_vertical|left"
            android:text="@string/date_from"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15_s"/>
        
        <com.pm360.cepm360.app.common.view.DatePickText
            android:id="@+id/create_date_from"
            android:layout_width="@dimen/dp160_w"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp6_h"
            android:layout_marginBottom="@dimen/dp6_h"
            android:layout_marginStart="@dimen/dp4_w"
            android:layout_marginEnd="@dimen/dp10_w"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp4_w"
            android:paddingRight="@dimen/dp4_w"
            android:background="@drawable/dialog_edit_text_bg2"
            cepm:buttonIcon="@drawable/calendar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15_s"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp4_h"
            android:layout_marginStart="@dimen/dp10_w"
            android:layout_marginTop="@dimen/dp4_h"
            android:gravity="center_vertical|left"
            android:text="@string/date_to"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15_s"/>
        
        <com.pm360.cepm360.app.common.view.DatePickText
            android:id="@+id/create_date_to"
            android:layout_width="@dimen/dp160_w"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp6_h"
            android:layout_marginBottom="@dimen/dp6_h"
            android:layout_marginStart="@dimen/dp4_w"
            android:layout_marginEnd="@dimen/dp10_w"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp4_w"
            android:paddingRight="@dimen/dp4_w"
            android:background="@drawable/dialog_edit_text_bg2"
            cepm:buttonIcon="@drawable/calendar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15_s"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1_h"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80_h"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/condition3"
            android:layout_width="@dimen/dp120_w"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp6_w"
            android:text="@string/belong_project"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp17_s"/>

        <View
            android:layout_width="@dimen/dp1_w"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp4_h"
            android:layout_marginLeft="@dimen/dp4_w"
            android:layout_marginRight="@dimen/dp8_w"
            android:layout_marginTop="@dimen/dp4_h"
            android:background="@drawable/dialog_edit_text_bg2"
            android:orientation="horizontal" >

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbarStyle="outsideOverlay" >

                <TextView
                    android:id="@+id/project_list_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp4_w"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15_s"/>
            </ScrollView>

            <ImageView
                android:id="@+id/project_select_open"
                android:layout_width="@dimen/dp40_w"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10_w"
                android:src="@drawable/project_table" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
