<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp36_h"
    android:background="@color/content_listview_header_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp50_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/task_name"
        android:layout_width="@dimen/dp120_w"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16_s" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:visibility="gone" />

    <TextView
        android:id="@+id/plan_duration"
        android:layout_width="@dimen/dp100_w"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp4_w"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16_s" />

    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="#c5707070"
        android:visibility="gone" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/start_time"
                android:layout_width="@dimen/dp130_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="@dimen/dp130_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/department"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/task_type"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16_s" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp130_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp4_w"
                android:textColor="@color/task_home_list_title_text"
                android:textSize="@dimen/table_title_textsize" />
        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>

</LinearLayout>