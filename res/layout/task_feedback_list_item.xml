<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/schedule_table_height"
    android:background="@drawable/table_header_background"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/task_home_list_line"
        android:visibility="visible" />

    <com.pm360.cepm360.app.common.view.CHScrollView
        android:id="@+id/item_chscroll_scroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:tag="CHScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/plan_duration"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:id="@+id/plan_duration_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="@dimen/dp140_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:id="@+id/start_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="@dimen/dp140_w"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:id="@+id/end_time_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <TextView
                android:id="@+id/status"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:id="@+id/status_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <TextView
                android:id="@+id/actual_duration"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <EditText
                android:id="@+id/actual_start_time"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="实际开始"
                android:textCursorDrawable="@null"
                android:focusableInTouchMode="false"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <EditText
                android:id="@+id/actual_end_time"
                android:layout_width="@dimen/dp160_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textCursorDrawable="@null"
                android:focusableInTouchMode="false"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <EditText
                android:id="@+id/editText1"
                android:layout_width="@dimen/dp120_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:cursorVisible="false"
                android:drawableRight="@drawable/icon_modify"
                android:focusableInTouchMode="false"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/table_padding_left"
                android:paddingRight="@dimen/dp10_w"
                android:textSize="@dimen/sp16_s"/>
            
            <ImageView
                android:id="@+id/saveButton1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/dp6_w"
                android:paddingRight="@dimen/dp6_w"
                android:paddingBottom="@dimen/dp6_h"
                android:paddingTop="@dimen/dp6_h"
                android:src="@drawable/icon_modify" />
            
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <TextView
                android:id="@+id/owner"
                android:layout_width="@dimen/dp80_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />
            
            <TextView
                android:id="@+id/department"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/task_home_list_line"
                android:visibility="visible" />

            <TextView
                android:id="@+id/task_type"
                android:layout_width="@dimen/dp100_w"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp16_s"/>

        </LinearLayout>
    </com.pm360.cepm360.app.common.view.CHScrollView>
</LinearLayout>
