<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

 	<item android:id="@android:id/background">
        <shape>
            <corners android:radius="16dip" />

            <gradient
                android:angle="270"
                android:centerColor="#80888f95"
                android:centerY="0.25"
                android:endColor="#80becdd8"
                android:startColor="#a05e5e5f" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="16dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#80C07AB8"
                    android:centerY="0.75"
                    android:endColor="#a0C07AB8"
                    android:startColor="#80C07AB8" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="16dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#f59241"
                    android:centerY="0.75"
                    android:endColor="#d64708"
                    android:startColor="#d64708" />
            </shape>
        </clip>
    </item>

</layer-list>